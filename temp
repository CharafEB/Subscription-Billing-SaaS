package main

import (
	"context"
	"log"
	"net/http"

	"google.golang.org/grpc"
	"google.golang.org/grpc/credentials/insecure"
	"your_module_path/proto"
)

func menuHandler(w http.ResponseWriter, r *http.Request) {
	conn, err := grpc.Dial("localhost:8081", grpc.WithTransportCredentials(insecure.NewCredentials()))
	if err != nil {
		http.Error(w, "Failed to connect to gRPC server", http.StatusInternalServerError)
		return
	}
	defer conn.Close()

	client := proto.NewMenuServiceClient(conn)
	res, err := client.GetMenu(context.Background(), &proto.GetMenuRequest{})
	if err != nil {
		http.Error(w, "Failed to get menu", http.StatusInternalServerError)
		return
	}

	// تحويل النتيجة إلى JSON وإرسالها كرد HTTP
	w.Header().Set("Content-Type", "application/json")
	json.NewEncoder(w).Encode(res.GetItems()) // تطلب import "encoding/json"
}

func main() {
	http.HandleFunc("/menu", menuHandler)
	log.Println("API Gateway running on :8080")
	http.ListenAndServe(":8080", nil)
}